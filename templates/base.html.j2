{% import "macros.html.j2" as macros with context %}

<!DOCTYPE html>
<html lang = "en">
    <head>
        <title>
            {% block title %} {% endblock %}
        </title>
        {# https://css-tricks.com/snippets/html/responsive-meta-tag/ #}
        <meta name = "viewport" content = "width=device-width, initial-scale=1">
        <link rel = "stylesheet" href = "static/style.css">
        {# load symbols quicker #}
        <link rel = "preconnect" href = "https://fonts.googleapis.com">
        {# https://developers.google.com/fonts/docs/material_symbols #}
        <link rel = "stylesheet" href = "https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,400,0..1,0">
        <script src = "static/ui.js"></script>
        <script src = "static/functions.js"></script>
        <link rel = "icon" href = "static/favicon.png">
    </head>

    <body>
        <nav id = "navbar">
            <div class = "nav-left">
                <a href = ".">
                    <img src = "static/favicon.png" height = 30 alt = "">
                </a>
            </div>
            <div class = "nav-center">
                <div id = "search-area">
                    <div id = "search-bar">
                        <span id = "search-icon" class = "material-symbol">search</span>
                        <input id = "club-search" type = "text" placeholder = "Search clubs..." autocomplete = "off" aria-label = "Search clubs">
                    </div>
                    <div id = "search-results" hidden>
                        <div class = "search-placeholder">Search to find new clubs!</div>
                    </div>
                </div>
            </div>
            <div class = "nav-right">
                <a href = "meetings">Meetings</a>
                {% if g.user.authenticated %}
                    <a href = "logout">Logout</a>
                    <a href = ".">
                        <img id = "profile-picture" src = "{{g.user.picture}}" height = 30 alt = "User image.">
                    </a>
                {% else %}
                    <a href = "login">Login</a>
                {% endif %}
            </div>
        </nav>
        <div id = "search-overlay"></div>
        {% block body %} {% endblock %}
        <script>
            window.si = window.si || function () { (window.siq = window.siq || []).push(arguments); };
        </script>
        <script defer src="/_vercel/speed-insights/script.js"></script>
        <script>
            window.va = window.va || function () { (window.vaq = window.vaq || []).push(arguments); };
        </script>
        <script defer src="/_vercel/insights/script.js"></script>
    </body>
</html>
